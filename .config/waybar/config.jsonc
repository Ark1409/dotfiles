// -*- mode: jsonc -*-
{
    "layer": "bottom", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "reload_style_on_change": true,
    "spacing": 15,

    "modules-left": [
        "hyprland/workspaces"
    ],

    "modules-center": [
        "hyprland/window"
    ],

    "modules-right": [
        "clock",
        "cava",
        "wireplumber",
        "cpu",
        "memory",
        "battery",
        "network",
        "tray",
        "idle_inhibitor",
        "systemd-failed-units"
    ],

    "cava": {
        "cava-config": "~/.config/cava/config",
        "autosens": 1,
        "sensitivity": 1,
        "bars": 6,
        "method": "pipewire",
        "bar_delimiter": 32,
