scriptencoding utf-8
set encoding=utf-8
set ff=unix

set nocompatible

syntax on

filetype plugin indent on

set number
set relativenumber
set sw=4
set ts=4
set smarttab
set expandtab

set ignorecase
set smartcase
set showcmd
set showmatch
set hlsearch
set incsearch
set scrolloff=5

set signcolumn=yes
set mouse=a

set list
set listchars=tab:>-,lead:.,trail:.,multispace:.,nbsp:-

let mapleader=" "
